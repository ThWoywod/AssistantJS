    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Specs",
            "program": "${workspaceFolder}/../../node_modules/.bin/jasmine-ts",
            "args": [ "**/**.spec.ts"],
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Build",
            "program": "${workspaceFolder}/../../node_modules/.bin/lerna",
            "args": [ "exec" , "--scope=assistant-validations", "gulp", "build" ],
            "cwd": "${workspaceFolder}",
            "outputCapture": "std"
        }
    ]
}