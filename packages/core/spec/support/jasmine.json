{
  "spec_dir": "spec",
  "spec_files": [
    "**/*[sS]pec.ts"
  ],
  "helpers": [
    "helpers/**/*.ts"
  ],
  "reporters": [
    {
      "name": "jasmine-spec-reporter#SpecReporter",
      "options": {
        "spec": {
          "displayStacktrace": "all",
          "displaySuccessful": false,
          "displayDuration": true,
          "displayFailed": true,
          "displayPending": true,
          "displayErrorMessage": true
        }
      }
    }
  ]
}